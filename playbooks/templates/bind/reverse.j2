$TTL 1W
@	IN	SOA	ns1.{{ dns.domain }}.	root (
			{{ serialnumber }}	; serial
			3H		; refresh (3 hours)
			30M		; retry (30 minutes)
			2W		; expiry (2 weeks)
			1W )		; minimum (1 week)
	IN	NS	ns1.{{ dns.domain }}.
;
; syntax is "last octet" and the host must have fqdn with trailing dot
{% for m in controls %}
{{ m.ipaddr.split('.')[3] }}	IN	PTR	{{ m.name }}.{{ dns.clusterid }}.{{ dns.domain }}.
{% endfor %}
;
{{ bootstrap.ipaddr.split('.')[3] }}	IN	PTR	{{ bootstrap.name }}.{{ dns.clusterid }}.{{ dns.domain }}.
;
{{ util.ipaddr.split('.')[3] }}	IN	PTR	{{ util.name }}.{{ dns.clusterid }}.{{ dns.domain }}.
{{ util.ipaddr.split('.')[3] }}	IN	PTR	api.{{ dns.clusterid }}.{{ dns.domain }}.
{{ util.ipaddr.split('.')[3] }}	IN	PTR	api-int.{{ dns.clusterid }}.{{ dns.domain }}.
{{ util.ipaddr.split('.')[3] }}	IN	PTR	apps.{{ dns.clusterid }}.{{ dns.domain }}.
;
{% for w in workers %}
{{ w.ipaddr.split('.')[3] }}	IN	PTR	{{ w.name }}.{{ dns.clusterid }}.{{ dns.domain }}.
{% endfor %}
;
{% if infras|length > 0 %}
{% for i in infras %}
{{ i.ipaddr.split('.')[3] }}	IN	PTR	{{ i.name }}.{{ dns.clusterid }}.{{ dns.domain }}.
{% endfor %}
;
{% endif %}
;EOF
