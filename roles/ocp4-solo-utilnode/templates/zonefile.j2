$TTL 1W
@	IN	SOA	ns1.{{ dns.domain }}.	root (
			{{ serialnumber }}	; serial
			3H		; refresh (3 hours)
			30M		; retry (30 minutes)
			2W		; expiry (2 weeks)
			1W )		; minimum (1 week)
	IN	NS	ns1.{{ dns.domain }}.
	IN	MX 10	smtp.{{ dns.domain }}.
;
; 
ns1	IN	A	{{ util.ipaddr }}
smtp	IN	A	{{ util.ipaddr }}
;
{{ util.name }}	IN	A	{{ util.ipaddr }}
{{ util.name }}.{{ dns.clusterid }}	IN	A	{{ util.ipaddr }}
;
; The api points to the IP of your load balancer
api.{{ dns.clusterid }}		IN	A	{{ util.ipaddr }}
api-int.{{ dns.clusterid }}		IN	A	{{ util.ipaddr }}
;
; The wildcard also points to the load balancer
apps.{{ dns.clusterid }}		IN	A	{{ util.ipaddr }}
*.apps.{{ dns.clusterid }}		IN	A	{{ util.ipaddr }}
;
; Create entry for the bootstrap host
{{ bootstrap.name }}.{{ dns.clusterid }}	IN	A	{{ bootstrap.ipaddr }}
;
; Create entries for the master hosts
{% for m in masters %}
{{ m.name }}.{{ dns.clusterid }}		IN	A	{{ m.ipaddr }}
{% endfor %}
;
{% if infras|length > 0 %}
; Create entries for the infra hosts
{% for i in infras %}
{{ i.name }}.{{ dns.clusterid }}		IN	A	{{ i.ipaddr }}
{% endfor %}
;
{% endif %}
; Create entries for the worker hosts
{% for w in workers %}
{{ w.name }}.{{ dns.clusterid }}		IN	A	{{ w.ipaddr }}
{% endfor %}
;
; The ETCd cluster lives on the masters...so point these to the IP of the masters
{% for m in masters %}
etcd-{{ loop.index0 }}.{{ dns.clusterid }}	IN	A	{{ m.ipaddr }}
{% endfor %}
;
; The SRV records are IMPORTANT....make sure you get these right...note the trailing dot at the end...
{% for m in masters %}
_etcd-server-ssl._tcp.{{ dns.clusterid }}	IN	SRV	0 10 2380 etcd-{{ loop.index0 }}.{{ dns.clusterid }}.{{ dns.domain }}.
{% endfor %}
;
;EOF
